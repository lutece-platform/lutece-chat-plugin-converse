<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<plug-in>
    <name>converse</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>converse.plugin.description</description>
    <provider>converse.plugin.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/feature_default_icon.png</icon-url>
    <copyright>Copyright (c) 2017 City of Paris</copyright>
    <db-pool-required>0</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <css-stylesheets>
         <css-stylesheet>https://cdn.conversejs.org/css/converse.min.css</css-stylesheet>
    </css-stylesheets>
    <javascript-files>
        <javascript-files-scope>xpage</javascript-files-scope>
        <javascript-file>https://cdn.conversejs.org/dist/converse.min.js</javascript-file>
    </javascript-files>
    
    <!-- Admin features parameters -->
    <admin-features>
    </admin-features>    

    <!-- XPages parameters -->
    <applications>
        <application>
            <application-id>chat</application-id>
            <application-class>fr.paris.lutece.plugins.converse.web.ConverseApp</application-class>
        </application>
    </applications>

    <!-- Portlet parameters -->
    <portlets>
   </portlets>
</plug-in>